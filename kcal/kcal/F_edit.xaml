<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:kcal;assembly=kcal"
             x:Class="kcal.F_edit"
             Title="Food new or edit">

  <StackLayout>
    <StackLayout Padding="5,10">
      <Label TextColor="#345c67" FontSize = "20" FontAttributes="Bold" Text="Food name:" />
      <Entry x:Name="f_FName" Keyboard="Text" Placeholder="Food name" Text="{Binding Name}"/>
    </StackLayout>
    <StackLayout Padding="5,10">
      <Button x:Name="btn_save" Text="Save"/>
    </StackLayout>
  </StackLayout>
  
</ContentPage>